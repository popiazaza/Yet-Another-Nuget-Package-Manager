// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "bun",
			"args": ["run", "build"],
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "silent",
				"echo": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "watch",
			"type": "shell",
			"command": "bun",
			"args": ["run", "build", "--watch"],
			"isBackground": true,
			"problemMatcher": {
				"pattern": {
					"regexp": "^.*$",
					"line": 1
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^.*transforming.*",
					"endsPattern": "^.*built in.*ms.*"
				}
			},
			"presentation": {
				"reveal": "silent",
				"echo": false
			},
			"group": {
				"kind": "build"
			}
		}
	]
}
